<?xml version="1.0"?>
<launch>
    <!-- Initialize arguments -->
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <!-- Open empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find beginner_tutorials)/worlds/box_world.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Spawn TurtleBot3 -->       
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
    args="-urdf -model Turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

    <!-- Run Walker_Node -->
    <node pkg="vaccum_walker" type="walker_node" name="walker_node">
        
    </node>

    <!-- Record ROSBag file -->
    <node pkg="rosbag" type="record" name="record_rosbag"
        args="record -O $(arg bagfile) -a -x '(.*)/camera(.*)'"
        if="$(arg is_record_bag)">
        
    </node>

</launch>